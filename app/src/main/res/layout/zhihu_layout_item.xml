<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zhihu_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/mid_grey_ripple"
    android:layout_marginLeft="@dimen/item_margin_edge"
    android:layout_marginRight="@dimen/item_margin_edge"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/raise">


        <com.example.jinphy.mylooklook.widget.BadgedFourThreeImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_image_id"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/image_left_margin"
            android:layout_marginTop="5dp"
            android:foreground="@drawable/mid_grey_ripple"
            android:scaleType="centerCrop"
            android:stateListAnimator="@animator/raise"
            app:badgeGravity="end|bottom"
            app:badgePadding="@dimen/padding_normal"/>


        <TextView
            android:id="@+id/item_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:stateListAnimator="@animator/raise"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

</android.support.v7.widget.CardView>